    "/auth/login": { "post": { "summary": "Login", "responses": { "200": { "description": "OK" } } } },
    "/auth/me": { "get": { "summary": "Current user", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } } } }
  }
