{
  "openapi": "3.0.0",
  "info": {
    "title": "Personal Finance Simplifier API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "/api" }],
  "paths": {
    "/health": { "get": { "summary": "Health check", "responses": { "200": { "description": "OK" } } } },
